<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageControls="clr-namespace:AgeCal.Components"
             x:Class="AgeCal.Components.ToastView">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal"  BackgroundColor="{StaticResource PrimaryWhite}"   HorizontalOptions="Center"  VerticalOptions="Fill" Padding="0">
            <Frame CornerRadius="20" HorizontalOptions="CenterAndExpand"  BorderColor="{StaticResource PrimaryWhite}"  BackgroundColor="{StaticResource PrimaryGray}"  VerticalOptions="CenterAndExpand">
                <Label x:Name="ToastLabel" LineBreakMode="WordWrap" TextColor="{StaticResource PrimaryBlack}" MaxLines="1" HorizontalOptions="Fill" VerticalOptions="Fill"
                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
            </Frame>
        </StackLayout>
    </ContentView.Content>
</ContentView>